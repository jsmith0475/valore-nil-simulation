# Production Environment Variables for NIL Simulation
# Copy this to .env and fill in your actual values

# OpenAI Configuration (Required for GPT narratives)
SIM_OPENAI_API_KEY=sk-your-openai-api-key-here
SIM_OPENAI_MODEL=gpt-4
SIM_OPENAI_MAX_OUTPUT_TOKENS=1200
SIM_OPENAI_REASONING_EFFORT=minimal

# Application URLs (Will be set by deployment platform)
NEXT_PUBLIC_API_BASE_URL=https://your-app.railway.app
NEXT_PUBLIC_WS_URL=wss://your-app.railway.app/ws/agents

# Data Mode Configuration
SIM_DATA_MODE=simulation
NEXT_PUBLIC_DATA_MODE=simulation
SIM_SYNTHETIC_SEED=4242

# Production Settings
NODE_ENV=production
